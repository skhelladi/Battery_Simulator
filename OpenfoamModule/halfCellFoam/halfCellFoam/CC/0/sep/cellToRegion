FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/sep";
    object      cellToRegion;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    sep_RE
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
    topAndBottom
    {
        type            empty;
    }
    sep_to_WE
    {
        type            calculated;
        value           uniform 0;
    }
}


